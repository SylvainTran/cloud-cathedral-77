    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "attach",
            "name": "NPM Start: Launch Chrome against localhost",
            "preLaunchTask": "npm: start",
            "port": 4200,
            "url": "http://localhost:4200",
            "webRoot": "${workspaceFolder}/src"
        },
        {
            "type": "pwa-chrome",
            "request": "attach",
            "name": "Attach Chrome against localhost",
            "port": 4200,
            "url": "http://localhost:4200",
            "webRoot": "${workspaceFolder}/src"
        }
    ]
}